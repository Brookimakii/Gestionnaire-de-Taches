{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal text-center">S'inscrire</h1>
                    {{ form_start(registrationForm) }}
                        <div class="form-group">
                            {{ form_label(registrationForm.pseudo, null, {'label_attr': {'class': 'col-form-label'}}) }}
                            {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.pseudo) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'col-form-label'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'col-form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(registrationForm.plainPassword.second, 'Confirmation Mot de passe', {'label_attr': {'class': 'col-form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>
                        <div class="form-group form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}   