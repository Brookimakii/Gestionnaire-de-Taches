{% extends 'base.html.twig' %}

{% block title %}Liste des Listes{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des Listes</h1>

    <div class="row">
        {% for task_list in tasks %}
            <div class="col-12 mb-3">
                <div class="card w-100">
                    <a href="{{ path('task_list_mein', {'id': task_list.id}) }}" class="stretched-link"></a>
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">{{ task_list.title }}</h5>
                            <p class="card-text">{{ task_list.description }}</p>
                        </div>
                        <div class="d-flex align-items-center">
                            {{ include('task_list/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info" role="alert">
                    Aucune liste trouv√©e
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<style>
    .card {
        width: 100%;
    }
    .card-body {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .stretched-link::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1;
    }
</style>
{% endblock %}
