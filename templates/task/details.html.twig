{# templates/task/detail.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de la tâche{{ task.title }}{% endblock %}

{% block body %}
    <h1>Détails de la tâche "{{ task.title }}"</h1>
    
    <div class="task-detail" style="background-color: {{ getPriorityColor(task.priority) }}">
        <p>Description : {{ task.description }}</p>
        <p>Date de création : {{ task.creationDate|date('d/m/Y') }}</p>
        <p>Priorité : {{ task.priority }}</p>
        <p>Statut : {% if task.finished %} Terminée {% else %} En cours {% endif %}</p>
    </div>
    
    <a href="{{ path('task_modifier', {'id': task.id}) }}">Modifier la tâche</a>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .task-detail {
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            color: white;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function getPriorityColor(priority) {
            switch (priority) {
                case 'rouge':
                    return 'red';
                case 'orange':
                    return 'orange';
                case 'verte':
                    return 'green';
                case 'gris':
                    return 'grey';
                default:
                    return 'inherit';
            }
        }
    </script>
{% endblock %}
