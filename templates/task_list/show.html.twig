{% extends 'base.html.twig' %}

{% block title %}TaskList - {{ task_list.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ task_list.title }}</h1>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Description</h5>
                <p class="card-text">{{ task_list.description }}</p>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_task_list_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('app_task_list_edit', {'id': task_list.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Détails
            </a>
            {{ include('task_list/_delete_form.html.twig', { 'button_class': 'btn btn-danger' }) }}
        </div>
    </div>
{% endblock %}
